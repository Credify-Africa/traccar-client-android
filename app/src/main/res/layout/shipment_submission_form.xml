<!--            app:cardCornerRadius="8dp"-->
<!--            app:cardBackgroundColor="#FFFFFF"-->
<!--            android:layout_marginBottom="16dp">-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Container ID Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Container ID"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/container_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Container ID"
                    android:inputType="text"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:textColorHint="#757575"
                    android:contentDescription="Container ID input field"
                    android:layout_marginBottom="16dp" />

                <!-- Comment Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comment"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Add a comment"
                    android:inputType="textMultiLine"
                    android:minLines="3"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:textColorHint="#757575"
                    android:contentDescription="Comment input field"
                    android:layout_marginBottom="16dp" />

                <!-- Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="end">

                    <Button
                        android:id="@+id/submit_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Submit"
                        android:backgroundTint="#1E88E5"
                        android:textColor="#FFFFFF"
                        android:padding="12dp"
                        android:contentDescription="Submit form"
                        android:layout_marginBottom="8dp" />

                    <Button
                        android:id="@+id/cancel_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cancel"
                        android:backgroundTint="#D32F2F"
                        android:textColor="#FFFFFF"
                        android:padding="12dp"
                        android:contentDescription="Cancel form submission" />

                </LinearLayout>
<!--            </LinearLayout>-->
<!--        </androidx.cardview.widget.CardView>-->
    </LinearLayout>
</androidx.core.widget.NestedScrollView>